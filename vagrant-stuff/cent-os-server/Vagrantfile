Vagrant.configure("2") do |config|
   config.vm.box = "centos/7"
   config.vm.provider "virtualbox" do |vb|
       vb.memory = 1024
       vb.cpus = 1
    end

config.vm.define "zabbix-server" do |zabbix|
    zabbix.vm.network "public_network", ip: "192.168.1.86"
    zabbix.vm.network "public_network", bridge: "wlp6s0"
    zabbix.vm.network "forwarded_port", guest:8666, host: 8666

    zabbix.vm.synced_folder ".configs", "/home/vagrant/zabbix-stuff"

    zabbix.vm.provision "shell",
    inline: "chmod +x ~/zabbix-stuff/zabbix-script-centos.sh && ~./zabbix-stuff/zabbix-script-centos.sh"

    end
end