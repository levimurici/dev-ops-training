Vagrant.configure("2") do |config|
   config.vm.box = "centos/7"
   config.vm.provider "virtualbox" do |vb|
       vb.memory = 1024
       vb.cpus = 1
    end

config.vm.define "zabbix-server" do |zabbix|
    zabbix.vm.network "public_network", ip: "192.168.1.86"
    zabbix.vm.network "forwarded_port", guest:8666, host: 8666
    zabbix.vm.synced_folder ".configs", "/home/vagrant/zabbix-storage"
    
    zabbix.vm.provision "shell",
    inline: "cat /zabbix-storage/authorized_keys/id_sshkey.pub >> .ssh/authorized_keys"

    zabbix.vm.provision "shell",
    inline: "sudo yum update && sudo yum -y upgrade"
    zabbix.vm.provision "shell", inline: "sudo chmod +x zabbix-storage/zabbix-init-sh && ./zabbix-storage/zabbix-init.sh"

    zabbix.vm.provision "shell", 
    inline: $script_zabbix
    zabbix.vm.synced_folder ".", "/vagrant", disabled: true
    end
end